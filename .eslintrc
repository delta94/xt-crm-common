{
  "extends": ["react-app", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "APP": true
  },
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 120,
        "proseWrap": "never",
        "overrides": [
          {
            "files": ".prettierrc",
            "options": {
              "parser": "json"
            }
          }
        ]
      }
    ]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  }
}
