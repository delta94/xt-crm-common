.content
  margin-top: 20px
  .left
    float: left
  .image-area
    width: 300px
    border: 1px solid #efefef
    position relative
    img 
      width: 100%
      border: 0
  .right
    float: right
    width: 440px
    .value-title
      cursor: pointer
      color: #1890ff
      display: inline-block
      max-width: 160px
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
      vertical-align: middle
  .right-item
    width: 100%
    line-height 40px
    :global(.ant-radio-group)
      line-height 40px