.intf-cat-reitem {
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  line-height: 32px;
  color: #000;
  padding: 0 10px;
  position: relative;
  margin-right: 10px;
  margin-bottom: 10px;
}

.intf-cat-reitem .close {
  display: inline-block;
  position: absolute;
  right: -6px;
  top: -6px;
  background: #909090;
  color: #dfdfdf;
  border-radius: 50%;
  cursor: pointer;
  line-height: 14px;
}