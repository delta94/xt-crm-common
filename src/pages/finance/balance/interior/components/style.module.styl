.capital-summary
  position: relative
  .title
    &:before
      content: ''
      display: inline-block
      margin-right: 10px
      width: 3px
      background: #169bd5;
      height: 20px
      vertical-align: text-bottom
  .refresh
    position: absolute
    right: 0
    top: -12px

.statistic
  display: flex
  width: 100%
  justify-content: space-around
  .item
    text-align: center
    position relative
    width: 100%
    .title
      font-size: 14px
    .description
      margin-top: 8px
      font-size: 16px
      font-weight: bold
    .line
      position: absolute
      right: -0.5px
      top: 50%
      transform: translateY(-50%)
      height: 30px
      width: 1px
      background: #d7d7d7