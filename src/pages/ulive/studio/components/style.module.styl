.view
  .base-info
    display flex
    .cover
      width: 190px
      height: 190px
      margin-right: 10px
      img 
        width: 100%
        height: 100%
    .base-info-right
      padding: 0 10px 10px
      flex: 1
  .statistics
    border: 1px solid rgb(121, 121, 121)
    padding: 20px 0px
    .statistics-item
      width: 20%
      display: inline-block
      vertical-align: top
      text-align: center
      padding: 10px 0px
      font-size: 14px
      color: #000
      .statistics-item-result
        font-weight 600
      .statistics-item-result
        color: #333
      .statistics-item-label
        color: #666
