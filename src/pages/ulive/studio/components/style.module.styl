.view
  .base-info
    display flex
    .cover
      width: 190px
      height: 190px
      margin-right: 10px
      img 
        width: 100%
        height: 100%
    .base-info-right
      padding: 0 10px 10px
      flex: 1
  .statistics
    border: 1px solid rgb(121, 121, 121)
    padding: 20px 0px
    .statistics-item
      width: 20%
      display: inline-block
      vertical-align: top
      text-align: center
      padding: 10px 0px
      font-size: 14px
      color: #000
      .statistics-item-result
        font-weight 600
      .statistics-item-result
        color: #333
      .statistics-item-label
        color: #666
.cover-upload
  width: auto
.title
  display flex
  &-item
    margin-right 20px
    cursor pointer
  &-item.active
    color #1890ff
    position relative
    &::after
      content: ' '
      position absolute
      bottom -17px
      left 0
      right 0
      height 2px
      background-color #1890ff
.input-wrapper
  display flex
.empty-coupon
  display flex
  justify-content center
  align-items center
  height 500px
  font-size 24px