.row
  min-height calc(100vh - 154px)
  .col
    height 100%
    margin-left -1px
  .col + .col
    border-left 1px solid #ccc
.title
  display flex
  justify-content space-between
  font-size 22px
  margin 0
  padding 10px 40px 30px
  .closeCircle
    font-size 24px
    cursor pointer
.wrap
  margin 0 auto
  width 375px
  height 400px
  background url('../../../assets/images/shell.png') 0 0 / 100% 100%
  .linkBlock
    margin 0 auto 20px
    width 343px
    height 310px
    backgroud #ffffff
    box-shadow 0px 4px 8px 0px rgba(0,0,0,0.09)
    border-radius 1px 1px 4px 4px
    border 1px solid rgba(246,246,246,1)
    overflow auto
    .link-label
      padding: 5px 10px
      color: #333333
      font-size: 16px
      font-weight: 600
    .link, .linkPlus
      float left
      width 25%
      padding-right 5px
      height 60px
    .link
      display flex
      flex-direction column
      // justify-content center
      align-items center
      img
        width 22px
        height 22px
      p
        margin-top 6px
        font-size 14px
        font-weight 400
        line-height 15px
        color #333
        word-break: break-all
        padding: 0 4px
    .linkPlus
      display flex
      align-items center
      justify-content center
    .linkPlusBtn
      color #ccc
      width 40px
      height 40px
      border-radius 6px
      border 1px dashed #ccc
      display flex
      justify-content center
      align-items center
      cursor pointer
.footer
  height 49px
  backgroud-color #fff
  box-shadow:0px -2px 12px 0px rgba(0,0,0,0.09)
  display flex
  align-items center
  border-radius 0 0 40px 40px
  .item
    flex 1
    display flex
    flex-direction column
    justify-content center
    align-items center
    img
      width 17px
      height 17px
      display block
    p
      font-size 10px
      color #333
      line-height 14px
      font-weight 400
      margin-top 4px
      &.active
        color #E60113
.search
  margin 30px auto 0
  width 387px